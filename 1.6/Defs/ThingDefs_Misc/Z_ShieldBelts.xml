<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelBase">
    <defName>Z_ShieldBelt</defName>
    <label>Z_护盾腰带</label>
    <description>琉华魔改版护盾腰带再魔改版，可持枪。.</description>
    <thingClass>Vanya_Test.Vanya_ShieldBelt</thingClass>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/ShieldBelt/ShieldBelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <Mass>1</Mass>
      <EnergyShieldRechargeRate>0.25</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>18</EnergyShieldEnergyMax>
      <WorkToMake>100</WorkToMake>
      <DeteriorationRate>0</DeteriorationRate>
      <MaxHitPoints>200</MaxHitPoints>
    </statBases>
    <costList>
      <Z_StanStoneA>1</Z_StanStoneA>
    </costList>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableMachining</li>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>BeltDefense</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.2,0.5,0.6,1)</only>
        </li>
      </options>
    </colorGenerator>
    <generateCommonality>0</generateCommonality>
    <generateAllowChance>0.00</generateAllowChance>
    <comps>
      <li Class="CompProperties_ApparelReloadable">
        <maxCharges>100</maxCharges>
        <ammoDef>Steel</ammoDef>
        <ammoCountPerCharge>1</ammoCountPerCharge>
        <baseReloadTicks>20</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>grenade</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
    <verbs>
      <li>
        <label>launch frag grenade</label>
        <verbClass>Verb_LaunchProjectileStatic</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <onlyManualCast>True</onlyManualCast>
        <range>90</range>
        <forcedMissRadius>0.</forcedMissRadius>
        <warmupTime>0.1</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
        <!-- <requireLineOfSight>false</requireLineOfSight> -->
        <targetParams>
          <canTargetPawns>true</canTargetPawns>
          <canTargetLocations>true</canTargetLocations>
          <canTargetBuildings>true</canTargetBuildings>
        </targetParams>
        <defaultProjectile>ZProj_GrenadierGrenade</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
  </ThingDef>
  <ThingDef ParentName="ZFragGrenadeProjectile">
    <defName>ZProj_GrenadierGrenade</defName>
    <label>frag grenade</label>
    <projectile>
      <speed>100</speed>
    </projectile>
  </ThingDef>
  <ThingDef Name="ZFragGrenadeProjectile" ParentName="BaseGrenadeProjectile" Abstract="True">
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Grenade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <explosionRadius>1.5</explosionRadius >
      <damageDef>BombSuper</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionDelay>1</explosionDelay>
      <!-- <flyOverhead>true</flyOverhead> -->
    </projectile>
  </ThingDef>
</Defs>
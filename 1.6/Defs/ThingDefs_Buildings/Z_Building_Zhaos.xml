  <ThingDef ParentName="BaseArtilleryBuilding">
    <defName>Z_Turret_AutoMortar</defName>
    <label>auto mortar</label>
    <description>A self-powered, self-loading, maned mortar.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <drawHighlight>true</drawHighlight>
    <drawHighlightOnlyForHostile>true</drawHighlightOnlyForHostile>
    <graphicData>
      <texPath>Things/Building/Mech/TurretMechLarge_Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <drawOffset>(0,0,-0.16)</drawOffset>
      <damageData>
        <rect>(0.3,0.3,1.4,1.4)</rect>
      </damageData>
      <shadowData> 
        <offset>(-0.13,-0.87,-0.1)</offset>
        <volume>(0.5,0.4,1.05)</volume>
      </shadowData>
    </graphicData>
    <receivesSignals>true</receivesSignals>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <size>(2,2)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <tickerType>Normal</tickerType>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>10</wickTicks>
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <!-- <li Class="CompProperties_Initiatable" /> -->
      <li Class="CompProperties_Flickable" />
    </comps>
    <statBases>
      <MaxHitPoints>200000</MaxHitPoints>
      <Flammability>0</Flammability>
      <Mass>30</Mass>
      <ShootingAccuracyTurret>0.9</ShootingAccuracyTurret>
      <Beauty>50</Beauty>
      <WorkToBuild>100</WorkToBuild>
    </statBases>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <altitudeLayer>Building</altitudeLayer>
    <building>
      <turretGunDef>Z_Artillery_AutoMortar</turretGunDef>
      <buildingTags>
        <li>MechClusterMember</li>
        <li>MechClusterProblemCauser</li>
      </buildingTags>
      <turretBurstWarmupTime>1.</turretBurstWarmupTime>
      <turretBurstCooldownTime>1.0</turretBurstCooldownTime>
      <turretInitialCooldownTime>1.0</turretInitialCooldownTime>
      <deconstructible>false</deconstructible>
      <quickTargetable>true</quickTargetable>
      <isTargetable>true</isTargetable>
      <buildingTags>
        <li>Artillery_BaseDestroyer</li>
        <li>Artillery_MannedMortar</li>
      </buildingTags>
    </building>
    <costList>
      <Z_StanStoneA>1</Z_StanStoneA>
    </costList>
    <designationCategory>Security</designationCategory>
    <placeWorkers>
      <li>PlaceWorker_OnSubstructure</li>
    </placeWorkers>
      <generateCommonality>0</generateCommonality>
      <generateAllowChance>0.00</generateAllowChance>
    <uiIconPath>Things/Building/Security/TurretMortar_MenuIcon</uiIconPath>
  </ThingDef>

